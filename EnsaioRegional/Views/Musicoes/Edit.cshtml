@model EnsaioRegional.Models.Musico

@{
    ViewData["Title"] = "Edit - Músicos";
}

<h1>Edit - Músicos</h1>

<h4>Musico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMusico" />
            <div class="form-group">
                <label asp-for="NomeMusico" class="control-label"></label>
                <input asp-for="NomeMusico" class="form-control" />
                <span asp-validation-for="NomeMusico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoMusico" class="control-label"></label>
                <input asp-for="IdTipoMusico" class="form-control" />
                <span asp-validation-for="IdTipoMusico" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IdTipoFormacao" /> @Html.DisplayNameFor(model => model.IdTipoFormacao)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IdInstrumento" class="control-label"></label>
                <select asp-for="IdInstrumento" class="form-control" asp-items="ViewBag.IdInstrumento"></select>
                <span asp-validation-for="IdInstrumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdIgreja" class="control-label"></label>
                <select asp-for="IdIgreja" class="form-control" asp-items="ViewBag.IdIgreja"></select>
                <span asp-validation-for="IdIgreja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="@Url.Content("~/js/jquery.validate.pt-Br.js")"></script>
}
